# Inflio Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===== REQUIRED FOR LAUNCH =====

# Supabase (Get from https://app.supabase.com)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Clerk Authentication (Get from https://clerk.com)
CLERK_SECRET_KEY=sk_live_
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/onboarding

# OpenAI (Get from https://platform.openai.com)
OPENAI_API_KEY=sk-

# Klap Video Processing (Get from https://klap.app)
KLAP_API_URL=https://klap.app/api/v1
KLAP_API_KEY=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000  # Change to your production URL

# ===== OPTIONAL BUT RECOMMENDED =====

# Replicate (For advanced AI features)
REPLICATE_API_TOKEN=

# ===== SOCIAL MEDIA OAUTH (Can add later) =====

# Facebook & Instagram (Same credentials)
# Get from https://developers.facebook.com
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
INSTAGRAM_CLIENT_ID=  # Same as FACEBOOK_APP_ID
INSTAGRAM_CLIENT_SECRET=  # Same as FACEBOOK_APP_SECRET

# YouTube
# Get from https://console.cloud.google.com
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# X (Twitter)
# Get from https://developer.twitter.com
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# LinkedIn
# Get from https://www.linkedin.com/developers
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ===== MONITORING & ANALYTICS (Optional) =====

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=

# ===== DEVELOPMENT ONLY =====
# These are only used in development
NEXT_PUBLIC_DEV_MODE=false 